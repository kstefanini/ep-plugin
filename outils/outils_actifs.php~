<?php

function outils_actifs() {	
	global $wpdb;
	/* On parcourt les meta-données de tous les projets */
	$res = $wpdb->get_results("
		SELECT * 
		FROM {$wpdb->prefix}bp_groups_groupmeta 
		WHERE group_id=52
	") ;
	/* On affiche les outils s'ils sont activés */
	foreach ($res as $meta) {
		$outil = $meta->meta_key;
		if ($meta->meta_value == "true") {
			echo "<script>alert('OK');</script>";
			require( dirname( __FILE__ ) . '/outils/'.$outil.'.php' );
		}
	}	
	
}
	
?>
